<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F56BD2">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="246dp"
        android:layout_height="126dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Log Saved"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="296dp"
        android:layout_height="66dp"
        android:layout_marginTop="20dp"
        android:text="Your today mood details are:"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.291"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/emotions_result"
        android:layout_width="260dp"
        android:layout_height="84dp"
        android:layout_marginTop="8dp"
        android:text="Emotion: "
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.271"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/sleep_hours_result"
        android:layout_width="249dp"
        android:layout_height="79dp"
        android:layout_marginTop="12dp"
        android:text="Sleep Hours: "
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.253"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emotions_result" />

    <TextView
        android:id="@+id/note_result"
        android:layout_width="234dp"
        android:layout_height="83dp"
        android:layout_marginTop="8dp"
        android:text="User Notes: "
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.231"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sleep_hours_result" />

    <Button
        android:id="@+id/button_continue"
        android:layout_width="188dp"
        android:layout_height="94dp"
        android:layout_marginTop="52dp"
        android:text="Continue"
        android:textSize="30dp"
        android:color="@color/substanceUse_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note_result" />

</androidx.constraintlayout.widget.ConstraintLayout>
