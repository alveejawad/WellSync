<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="200.0"
            prefWidth="300.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.softeng.assignment.HelloController">
    <Label layoutX="42.0" layoutY="58.0" text="Username"/>
    <TextField fx:id="userEmail" layoutX="128.0" layoutY="54.0" prefHeight="25.0" prefWidth="150.0"/>
    <Label layoutX="42.0" layoutY="105.0" text="Password"/>
    <PasswordField fx:id="userPassword" layoutX="128.0" layoutY="101.0" prefHeight="25.0" prefWidth="150.0"/>
    <Button fx:id="loginButton" layoutX="128.0" layoutY="151.0" mnemonicParsing="false" text="Login"
            onAction="#handleLoginButtonAction"/>
    <!-- Centering the welcomeText label horizontally and wrapping text to the next line -->
    <Label fx:id="welcomeText" visible="false"
           text="Assignment done! Launching a scrap page to show that login is successful..."
           wrapText="true" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="70.0"/>
    <Label fx:id="errorLabel" text="Incorrect credentials, please try again.."
           textFill="red" visible="false" wrapText="true"
           AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="20.0"/>
</AnchorPane>
